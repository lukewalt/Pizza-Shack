extends partials/layout.pug

block content
  .heading
    h1 Register
    if msg 
      h2= msg 
  .login_form
    form(method="POST")
      .form-group
        label(for="email") Email
        input.form-control#email(type='email' name='email' placeholder='johnny@dude.com' required)
      .form-group
        label(for="password") Password
        input.form-control#password(type='password' name='password' placeholder='password' required)
      .form-group
         label(for='confirmation') Password Confirmation
         input.form-control#password(
           type='password'
           name='confirmation'
           placeholder='********'
           required
         )
      .contact-form__submit
        a.btn.btn-one.btn-lg('/') Cancel
        input.btn.btn-one.btn-lg(type='submit' value='Register')
